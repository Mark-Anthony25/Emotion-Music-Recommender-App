<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.ebmr.myapplication1.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.ebmr.myapplication1.ui.gallery.GalleryFragment"
        android:label="Music Playlist"
        tools:layout="@layout/fragment_gallery">
        <argument
            android:name="detectedEmotion"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.ebmr.myapplication1.ui.slideshow.SlideshowFragment"
        android:label="About Us"
        tools:layout="@layout/fragment_slideshow" />
</navigation>